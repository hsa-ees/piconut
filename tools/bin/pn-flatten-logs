"""Script to flatten log for gitlab artifacts"""

import os
import shutil
import argparse


def flatten_logs(src_dir: str, out_dir: str):
    if os.path.exists(out_dir):
        shutil.rmtree(out_dir)
    os.makedirs(out_dir, exist_ok=True)

    for dirpath, _, filenames in os.walk(src_dir):
        for filename in filenames:
            if not filename.endswith(".log"):
                continue
            src = os.path.join(dirpath, filename)
            if out_dir in src:
                continue

            relpath = os.path.relpath(src, src_dir)
            parts = [p for p in relpath.split(os.sep)]
            flat_name = "_".join(parts)

            dst = os.path.join(out_dir, flat_name)
            os.makedirs(os.path.dirname(dst), exist_ok=True)
            shutil.copy2(src, dst)

    print(f"Logs flattened into: {out_dir}/")


def main():
    parser = argparse.ArgumentParser(
        description=__doc__,
    )
    parser.add_argument(
        "src_dir",
        nargs="?",
        help="Source build directory containing .log files",
    )
    parser.add_argument(
        "out_dir",
        help="Output directory for flattened logs",
    )
    args = parser.parse_args()
    flatten_logs(args.src_dir, args.out_dir)


if __name__ == "__main__":
    main()
