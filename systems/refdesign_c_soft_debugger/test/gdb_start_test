tar ext :3333
set tdesc filename ../../../tools/etc/gdb_piconut.xml

# make a breakpoint and jumping to it
b person_animation
continue

# reading all csr registers
info registers csr

# runing three printout cycles
continue
continue
continue

# testing the read of a single csr register
p/x $misa

# setting the position variable back to 1
set var position = 1
p/x position

# running three printout cycles
continue
continue
continue

# stepping
next
next
next

continue

si
si
si

continue

# testing register read/write 10
set $counter = 0
while ($counter < 10)
    set $t1 = $counter
    print $t1
    set $counter = $counter + 1
end

# quiting the script
quit
y