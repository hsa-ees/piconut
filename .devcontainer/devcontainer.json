{
    "dockerComposeFile": "../docker-compose.yml",
    "service": "piconut",
    "workspaceFolder": "/home/piconut-user/piconut",
    "name": "PicoNut",
    "shutdownAction": "stopCompose",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "xaver.clang-format", // default formatter
                "ms-python.vscode-pylance", // python scripts
                "ms-vscode.makefile-tools", // makefile support
                "hediet.vscode-drawio", // drawio diagrams for documentation
                "eamodio.gitlens",
                "mhutchie.git-graph" // git graph is a paid feature in gitlens
            ],
            "settings": { // precedence = 1: user, 2: devcontainer, 3: workspace
            }
        }
    }
}